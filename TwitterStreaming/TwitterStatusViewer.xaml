<UserControl x:Class="TwitterStreaming.TwitterStatusViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="uc">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" x:Name="userImage" Width="32" Height="32" Margin="0 2.5 5 2.5" VerticalAlignment="Top" />
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0 0 5 0">
            <TextBlock FontWeight="Bold" Foreground="{Binding ElementName=uc, Path=NameForeground}" x:Name="nameTextBlock" />
            <TextBlock x:Name="postTextBlock" TextWrapping="Wrap" Foreground="{Binding ElementName=uc, Path=Foreground}" />
        </StackPanel>
    </Grid>
</UserControl>
