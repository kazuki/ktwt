<Window x:Class="TwitterStreaming.HashTagInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="HashTag" Width="320" SizeToContent="Height" WindowStyle="ToolWindow" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="txtHashTag" Padding="0 5 0 5" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="Button_Click">OK</Button>
            <Button Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
